<!--        <argument-->
<!--            android:name="nowStep"-->
<!--            app:argType="long" />-->
        <argument
            android:name="isModify"
            app:argType="boolean" />
    </fragment>

    <include app:graph="@navigation/nav_select_hsv" />

    <include app:graph="@navigation/nav_opt_preview" />
