<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Min"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/sb_min"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:max="255"
        app:layout_constraintStart_toStartOf="@+id/tv_min"
        app:layout_constraintTop_toBottomOf="@id/tv_min" />

    <EditText
        android:id="@+id/et_min"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:hint="0-255"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/sb_min"
        app:layout_constraintStart_toEndOf="@+id/sb_min" />


    <TextView
        android:id="@+id/tv_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Max"
        app:layout_constraintStart_toEndOf="@+id/et_min"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/sb_max"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:max="255"
        app:layout_constraintStart_toStartOf="@+id/tv_max"
        app:layout_constraintTop_toBottomOf="@id/tv_max" />

    <EditText
        android:id="@+id/et_max"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:hint="0-255"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/sb_max"
        app:layout_constraintStart_toEndOf="@+id/sb_max" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_max" />

</androidx.constraintlayout.widget.ConstraintLayout>