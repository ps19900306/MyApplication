<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置背景颜色 -->
    <solid android:color="#FFFFFF" /> <!-- 白色背景 -->

    <!-- 设置边框 -->
    <stroke
        android:width="2dp"
        android:color="#FF000000" /> <!-- 黑色边框 -->

    <!-- 设置圆角 -->
    <corners
        android:radius="16dp" /> <!-- 圆角半径 -->

    <!-- 设置内边距 -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
